	<bean id="mqttFusekiControllerBean" class="br.ufba.dcc.wiser.fot.storage.MqttFusekiController"
		init-method="init" destroy-method="disconnect">
		<property name="brokerUrl" value="${MQTTHost}" />
		<property name="brokerPort" value="${MQTTPort}" />
		<property name="serverId" value="${MQTTServerId}" />
		<property name="username" value="${MQTTUsername}" />
		<property name="password" value="${MQTTPassword}" />
		<property name="fusekiURI" value="${TripleStoreURI}" />
		<property name="baseURI" value="${BaseURIForSensorData}" />
	</bean>
	
-->

	<bean id="MqttH2StorageControllerBean" class="br.ufba.dcc.wiser.fot.storage.MqttH2StorageController" init-method="init" destroy-method="disconnect">
		<property name="brokerUrl" value="${MQTTHost}" />
		<property name="brokerPort" value="${MQTTPort}" />
		<property name="serverId" value="${MQTTServerId}" />
		<property name="username" value="${MQTTUsername}" />
		<property name="password" value="${MQTTPassword}" />
		<property name="fusekiURI" value="${TripleStoreURI}" />
		<property name="baseURI" value="${BaseURIForSensorData}" />
		<property name="dataSource" ref="dataBase"/>
	</bean>

</blueprint>
